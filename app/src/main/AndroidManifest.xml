<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="antera.needsver2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- initialize activity -->
        <activity android:name=".supermarket.MainActivity">

        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme">

        </activity>
        <activity
            android:name=".RegisterActivity"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".SplashScreen" />
        <activity
            android:name=".ForgotPasswordActivity"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/AppTheme.WhiteBackground" />
        <activity
            android:name=".supermarket.CategoryActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".supermarket.ItemViewActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".supermarket.ProductsViewActivity"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".supermarket.ChooseDeliveryLocation"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".supermarket.Checkout"
            android:theme="@style/AppTheme" />
        <activity android:name=".supermarket.KurirMainActivity"></activity>
        <activity android:name=".supermarket.GudangMainActivity" />
        <activity android:name=".supermarket.DetailOrderActivity"></activity>
    </application>

</manifest>